<header class="bg-green-700 text-white py-6 shadow-md w-full">
  <div class="max-w-7xl mx-auto flex justify-between items-center px-6">
        <%= render 'shared/header' %>
        <%= yield %>
  </div>
</header>


<div class="text-center mt-6">
 <h1 class="text-3xl font-bold text-yellow-400 mb-6">Registrar Lugar</h1>
</div>
<!-- Agregar esto para mostrar mensajes de error -->
<% if flash[:alert] %>
  <div class="max-w-2xl mx-auto mb-4">
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <%= flash[:alert] %>
    </div>
  </div>
<% end %>

<% if @lugar.errors.any? %>
  <div class="max-w-2xl mx-auto mb-4">
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
      <ul>
        <% @lugar.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<%= form_with model: @lugar, url: lugares_path, local: true, html: { class: 'space-y-4 max-w-2xl mx-auto bg-white p-6 rounded-lg shadow-md border border-green-200' } do |form| %>
  <div>
    <%= form.label :nombre, class: 'block text-green-700 font-medium mb-1' %>
    <%= form.text_field :nombre, class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
  </div>

  <div>
    <%= form.label :direccion,"Dirección", class: 'block text-green-700 font-medium mb-1' %>
    <%= form.text_field :direccion, class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
  </div>

  <div>
    <%= form.label :tipo, class: 'block text-green-700 font-medium mb-1' %>
    <%= form.text_field :tipo, class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
  </div>

  <div>
    <%= form.label :puntaje, class: 'block text-green-700 font-medium mb-1' %>
    <%= form.number_field :puntaje, in: 1..5, class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
  </div>

  <div>
    <%= form.label :descripcion,"Descripción" ,class: 'block text-green-700 font-medium mb-1' %>
    <%= form.text_area :descripcion, class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
  </div>



  <div class="text-center">
    <%= form.submit "Registrar",class: 'btn btn-success', onclick: "return confirm('¿Estás seguro de que quieres cargar el lugar? ');" %>
  </div>
<% end %>

<div class="text-center mt-6">
  <%= link_to 'Volver a Inicio', root_path, class: 'inline-block bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 transition duration-300' %>
</div>
