<h1>Registrar Lugar</h1>
<%= form_with model: @lugar, url: lugares_path, local: true do |form| %>
  <%= form.label :nombre %>
  <%= form.text_field :nombre %><br>

  <%= form.label :direccion %>
  <%= form.text_field :direccion %><br>

  <%= form.label :tipo %>
  <%= form.text_field :tipo %><br>

  <%= form.label :puntaje %>
  <%= form.number_field :puntaje, in: 1..5 %><br>

  <%= form.label :descripcion %>
  <%= form.text_area :descripcion %><br>

  <%= form.label :fecha_de_registro %>
  <%= form.date_field :fecha_de_registro, min: Date.today %><br>

  <%= form.submit "Registrar" %>
<% end %>
<br><br>

<%= link_to 'Volver a Inicio', root_path, class: 'btn btn-primary' %>
