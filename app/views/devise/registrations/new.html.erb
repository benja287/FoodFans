<header class="bg-green-700 text-white py-6 shadow-md w-full">
  <div class="max-w-7xl mx-auto flex justify-between items-center px-6">
    <!-- Información de bienvenida -->
    <div class="info">
      <h1 class="text-3xl font-extrabold text-yellow-400">Food Fans</h1>
      <p class="text-green-200">¡Listos para tu reseña!</p>
    </div>

    <div class="auth-links text-green-200">
      <% if user_signed_in? %>
        <p class="text-sm">Usuario actual: <%= current_user.email %> - Rol: <%= current_user.admin? ? "Administrador" : "Usuario" %></p>
      <% end %>
    </div>
  </div>
</header>



<h2 class="text-2xl font-bold text-center text-green-700 mb-6 mt-3">Registrarse</h2>
<% if resource.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="max-w-md mx-auto bg-white p-6 rounded shadow-md border border-green-200">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


    <div class="field">
      <%= f.label :email,"Correo electrónico", class: 'block text-green-700 font-medium mb-1' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
    </div>

    <div class="field">
      <%= f.label :password,"Contraseña", class: 'block text-green-700 font-medium mb-1' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation,"Confirmación de contraseña", class: 'block text-green-700 font-medium mb-1' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
    </div>

    <div class="text-center">
      <%= f.submit "Registrar",class: 'btn btn-success', onclick: "return confirm('¿Estás seguro de que quieres completar tu registro con los datos ingresados? ');" %>
    </div>
    <div class="actions mt-3">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
