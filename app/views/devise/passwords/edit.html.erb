<header class="bg-green-700 text-white py-6 shadow-md w-full">
  <div class="max-w-7xl mx-auto flex justify-between items-center px-6">
    <%= render 'shared/header'%>
    <%= yield %>
  </div>
</header>

<% if resource.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<h2 class="text-2xl font-bold text-center text-green-700 mb-6 mt-10">Cambiar Contraseña</h2>


<div class="max-w-md mx-auto bg-white p-6 rounded shadow-md border border-green-200">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

    <%= f.hidden_field :reset_password_token %>
    
    
    <!-- contraseña -->
    <div class="field">
      <%= f.label :password, "Nueva Contraseña", class: 'block text-green-700 font-medium mb-1' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
    </div>

    
    <!-- confirmación -->
    <div class="field">
      <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: 'block text-green-700 font-medium mb-1' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
    </div>


    <!-- restablecer -->
    <div class="actions">
      <%= f.submit "Restablecer", class: 'btn btn-success', onclick: "return confirm('¿Estás seguro de la clave ingresada? ');" %>
    </div>
  <% end %>
  <div class="actions mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>