
<header class="bg-green-700 text-white py-6 shadow-md w-full">
  <div class="max-w-7xl mx-auto flex justify-between items-center px-6">
    <%= render 'shared/header'%>
    <%= yield %>
  </div>
</header>



<% if resource.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>





<!-- html de la pagina de olvidar contraseña -->


<h2 class="text-2xl font-bold text-center text-green-700 mb-6 mt-10">¿Olvidaste Tu Contraseña?</h2>

<%= flash[:alert] %>

<div class="max-w-md mx-auto bg-white p-6 rounded shadow-md border border-green-200">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    
    <!-- Campo para Correo Electrónico -->
    <div class="field mb-6">
      <%= f.label :email,"Correo electrónico", class: 'block text-green-700 font-medium mb-2' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: 'w-full px-4 py-3 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
    </div>
        

    <!-- BOTÓNES -->
    <div class="actions">
      <%= f.submit "Enviar instrucciones para restablecer contraseña", class: 'w-full bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition duration-300'  %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>