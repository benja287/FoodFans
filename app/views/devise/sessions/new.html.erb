<header class="bg-green-700 text-white py-6 shadow-md w-full">
  <div class="max-w-7xl mx-auto flex justify-between items-center px-6">
    <!-- Información de bienvenida -->
    <div class="info">
      <h1 class="text-3xl font-extrabold text-yellow-400">Food Fans</h1>
      <p class="text-green-200">¡Listos para tu reseña!</p>
    </div>

    <div class="auth-links text-green-200">
      <% if user_signed_in? %>
        <p class="text-sm">Usuario actual: <%= current_user.email %> - Rol: <%= current_user.admin? ? "Administrador" : "Usuario" %></p>
      <% end %>
    </div>
  </div>
</header>


<h2 class="text-2xl font-bold text-center text-green-700 mb-6 mt-10">Inicio sesion</h2>
<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>
<div class="max-w-md mx-auto bg-white p-6 rounded shadow-md border border-green-200">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'block text-green-700 font-medium mb-1' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'block text-green-700 font-medium mb-1' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
    </div>



    <div class="actions">
      <%= f.submit "Iniciar sesion", class: 'w-full bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition duration-300' %>
    </div>
  <% end %>


    <div class="mt-3">
       <%= render "devise/shared/links" %>
    </div>

</div>
