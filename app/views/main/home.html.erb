<header class="bg-green-700 text-white py-6 shadow-md w-full">
  <div class="max-w-7xl mx-auto flex justify-between items-center px-6">
    <!-- Información de bienvenida -->
    <div class="info">
      <h1 class="text-3xl font-extrabold text-yellow-400">Food Fans</h1>
      <p class="text-green-200">¡Listos para tu reseña!</p>
    </div>

    <div class="auth-links text-green-200">
      <% if user_signed_in? %>
        <p class="text-sm">Usuario actual: <%= current_user.email %> - Rol: <%= current_user.admin? ? "Administrador" : "Usuario" %></p>
      <% end %>
    </div>

    <!-- Menú desplegable -->
    <div class="relative">
      <button data-bs-toggle="dropdown" class="flex items-center bg-green-500 text-white px-4 py-2 rounded-lg border border-green-400 hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300" type="button" id="dropdownMenuButton">
        <span class="mr-2">Menú</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
      <ul class="dropdown-menu absolute right-0 mt-2 w-56 bg-white border border-green-200 rounded-lg shadow-lg hidden z-20">
        <% if user_signed_in? %>
          <li>
            <%= link_to 'Cargar Información', cargar_informacion_path, class: 'block px-4 py-3 text-gray-700 hover:bg-green-100 transition' %>
          </li>
          <li>
            <%= link_to 'Menu principal de lugares', lugares_path, class: 'block px-4 py-3 text-gray-700 hover:bg-green-100 transition' %>
          </li>
          <li>
            <%= link_to 'Ver todas las reseñas', root_path, class: 'block px-4 py-3 text-gray-700 hover:bg-green-100 transition' %>
          </li>
          <li>
            <%= button_to 'Cerrar Sesión', destroy_user_session_path, method: :delete, class: 'block px-4 py-3 text-gray-700 hover:bg-green-100 transition' %>
          </li>
        <% else %>
          <li>
            <%= link_to 'Iniciar Sesión', new_user_session_path, class: 'block px-4 py-3 text-gray-700 hover:bg-green-100 transition' %>
            <%= link_to 'Crear cuenta nueva', new_user_registration_path,class: 'block px-4 py-3 text-gray-700 hover:bg-green-100 transition' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>

<% if user_signed_in? %>
  <div class="container mt-6">
    <h2 class="text-2xl font-bold text-green-700">Reseñas de Comidas en Cada Lugar: Reseñas Propias y de Otros Usuarios</h2>

    <% @lugares.each do |lugar| %>
      <div class="mb-6">
        <h3 class="text-xl font-semibold text-yellow-400">Lugar: <%= lugar.nombre %></h3> <!-- Muestra el nombre del lugar -->
        <h3 class="text-xl font-semibold text-yellow-400">Dirección: <%= lugar.direccion %></h3> <!-- Muestra la dirección del lugar -->

        <!-- Mostrar el nombre del usuario que agregó el lugar -->
        <p class="text-sm text-gray-500">Propietario: <%= lugar.user.email %></p> <!-- Asegúrate de que 'usuario' sea la relación correcta -->

        <% # Filtrar comidas que tienen opiniones %>
        <% comidas_con_opiniones = lugar.comidas.select { |comida| comida.opinions.any? } %>

        <% if comidas_con_opiniones.any? %>
          <% comidas_con_opiniones.each do |comida| %>
            <div class="my-3 p-3 border border-green-300 rounded-lg">
              <%= link_to "Ver Reseñas de la comida: #{comida.nombre}", lugare_comida_opinions_path(lugare_id: lugar.id, comida_id: comida.id), class: 'block px-4 py-2 text-green-600 hover:bg-green-100 transition' %>
            </div>
          <% end %>
        <% else %>
          <span class="text-gray-500">No hay comidas con reseñas disponibles</span>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="container mt-6">
    <p class="text-gray-500">Por favor, inicia sesión para ver los lugares y comidas.</p>
  </div>
<% end %>
