<header class="bg-green-700 text-white py-6 shadow-md w-full">
  <div class="max-w-7xl mx-auto flex justify-between items-center px-6">
    <!-- Información de bienvenida -->
    <div class="info">
      <h1 class="text-3xl font-extrabold text-yellow-400">Food Fans</h1>
      <p class="text-green-200">¡Listos para tu reseña!</p>
    </div>

    <div class="auth-links text-green-200">
      <% if user_signed_in? %>
        <p class="text-sm">Usuario actual: <%= current_user.email %> - Rol: <%= current_user.admin? ? "Administrador" : "Usuario" %></p>
      <% end %>
    </div>

    <!-- Menú desplegable -->
    <div class="relative">
      <button data-bs-toggle="dropdown" class="flex items-center bg-green-500 text-white px-4 py-2 rounded-lg border border-green-400 hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300" type="button" id="dropdownMenuButton">
        <span class="mr-2">Menú</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
      <ul class="dropdown-menu absolute right-0 mt-2 w-56 bg-white border border-green-200 rounded-lg shadow-lg hidden z-20">
        <% if user_signed_in? %>
          <li>
            <%= link_to 'Cargar Información', cargar_informacion_path, class: 'block px-4 py-3 text-gray-700 hover:bg-green-100 transition' %>
          </li>
          <li>
            <%= link_to 'Ver Lugares Registrados', lugares_path, class: 'block px-4 py-3 text-gray-700 hover:bg-green-100 transition' %>
          </li>
          <li>
            <%= link_to 'Ver todas las opiniones', root_path, class: 'block px-4 py-3 text-gray-700 hover:bg-green-100 transition' %>
          </li>
          <li>
            <%= button_to 'Cerrar Sesión', destroy_user_session_path, method: :delete, class: 'block px-4 py-3 text-gray-700 hover:bg-green-100 transition' %>
          </li>
        <% else %>
          <li>
            <%= link_to 'Iniciar Sesión', new_user_session_path, class: 'block px-4 py-3 text-gray-700 hover:bg-green-100 transition' %>
            <%= link_to 'Crear cuenta nueva', new_user_registration_path,class: 'block px-4 py-3 text-gray-700 hover:bg-green-100 transition' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>


<div class="text-center mt-6">
  <h1 class="text-3xl font-bold text-yellow-400 mb-6">
    Registrar Comida de <%= @lugar.nombre %>
  </h1>
</div>
<!-- Agregar mensajes de error -->
<% if flash[:alert] %>
  <div class="max-w-2xl mx-auto mb-4">
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <%= flash[:alert] %>
    </div>
  </div>
<% end %>

<% if @comida.errors.any? %>
  <div class="max-w-2xl mx-auto mb-4">
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
      <ul>
        <% @comida.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>



<%= form_with model: [@lugar, @comida], url: lugare_comidas_path(@lugar), local: true, multipart: true, html: { class: 'space-y-4 max-w-2xl mx-auto bg-white p-6 rounded-lg shadow-md border border-green-200' } do |form| %>
  <div>
    <%= form.label :nombre, class: 'block text-green-700 font-medium mb-1' %>
    <%= form.text_field :nombre, class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
  </div>

  <div>
    <%= form.label :photo,"Foto", class: 'block text-green-700 font-medium mb-1' %>
    <%= form.file_field :photo, class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
  </div>

  <div>
    <%= form.label :precio, class: 'block text-green-700 font-medium mb-1' %>
    <%= form.number_field :precio, class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
  </div>

  <div>
    <%= form.label :sabor, class: 'block text-green-700 font-medium mb-1' %>
    <%= form.text_field :sabor, class: 'w-full px-3 py-2 border border-green-300 rounded focus:outline-none focus:ring-2 focus:ring-green-500' %>
  </div>
  <div>
  <%= form.label :tipo_comida, class: 'block text-green-700 font-medium mb-1' %>
  <div class="flex flex-wrap gap-2 mt-2">
    <% ["Carne", "Pastas", "Pescados y Mariscos", "Harinas","Platos Fritos","Verduras","Otros"].each do |tipo| %>
      <label class="inline-flex items-center">
        <%= check_box_tag 'comida[tipo_comida][]', tipo, false, class: 'form-checkbox' %>
        <span class="ml-2 text-green-700"><%= tipo %></span>
      </label>
    <% end %>
  </div>
</div>
<div class="text-center">
  <%= form.submit "Registrar",class: 'btn btn-success', onclick: "return confirm('¿Estás seguro de que quieres registrar la comida? ');" %>
</div>


<% end %>

<div class="text-center mt-6">
  <%= link_to 'Volver atras',lugare_path(@lugar), class: 'inline-block bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 transition duration-300' %>
</div>
